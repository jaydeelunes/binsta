{ extends "layouts/app.twig" }

{ block body }

    <!-- Profile header -->
    <div class="d-flex shadow-sm justify-content-center">
        
        <!-- Profile card -->
        <div class="w-50 d-flex py-4 flex-wrap">
            <img src="{{ user. image }}" alt="{{ post.username}} profile image" style="border-radius: 50%; height: 8rem">
            <div class="my-auto p-3">
                <div class="">
                    <span class="fw-bold">{{ user.name }}</span>
                </div>
                <div class="">
                    {{ user.bio }}
                </div>
            </div>
        </div> 

        <!-- Action button -->
        <div class="d-flex flex-column justify-content-evenly align-items-center"> 
            <a href="/user/profile?id={{ user.id }}">
                <button class="btn btn-secondary">Back to profile</button>
            </a>
        </div>

    </div>

    <!-- Form -->
    <div class="container">
        <div class="d-flex flex-column align-items-center pt-4">

            <!-- Alerts -->
            { include "/elements/user_alerts.twig" }
            
            <form action="/user/updatePost" method="POST" enctype="multipart/form-data" class="me-5 pe-5">
                
                <!-- Profile picture -->
                <div class="my-4 d-flex align-items-center">
                    <label class="mb-0 me-3 col-5 text-end" for="username" class="form-label">Profile picture</label>
                    <input type="file" class="form-control" id="image" name="image">
                </div>

                <!-- Username -->
                <div class="mb-4 d-flex align-items-center">
                    <label class="mb-0 me-3 col-5 text-end" for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{ user.username }}">
                </div>

                <!-- Full name -->
                <div class="mb-4 d-flex align-items-center">
                    <label class="mb-0 me-3 col-5 text-end" for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{ user.name }}">
                </div>

                <!-- User bio -->
                <div class="mb-4 d-flex align-items-center">
                    <label class="mb-0 me-3 col-5 text-end" for="bio" class="form-label">Bio</label>
                    <textarea type="text" class="form-control" id="bio" name="bio" style="height: 6rem; resize: none;">{{ user.bio }}</textarea>
                </div>

                <!-- Password -->
                <div class="mb-4 d-flex align-items-center">
                    <label class="mb-0 me-3 col-5 text-end" for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>

                <div class="mb-4 d-flex align-items-center">
                    <label class="mb-0 me-3 col-5 text-end" for="passwordconfirm" class="form-label">Password confirmation</label>
                    <input type="password" class="form-control" id="passwordconfirm" name="passwordconfirm">
                </div>

                <!-- Submit button -->
                <div class="d-flex justify-content-end mb-4">
                    <input type="submit" name="submit" class="btn btn-primary" value="Save">
                </div>
            </form>
        </div>
    </div>

{ endblock }