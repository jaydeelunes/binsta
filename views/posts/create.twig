{ extends "layouts/app.twig" }

{ block body }

    <script defer src="/scripts/textAreaTab.js"></script>

    <form action="/post/createPost" method="POST" class="container d-flex flex-column align-items-center">

        <div class="card col-10 col-sm-9 col-md-7 col-lg-5 col-xl-4 my-3">

            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a href="/user/profile?id={{ post.users_id }}" class="link-dark text-decoration-none">
                            <img src="{{ active_user.image }}" alt="{{ active_user.username }} profile picture" class="me-2 profile-header-image">
                            <small>{{ active_user.username }}</small>
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card-body d-flex flex-column p-0">
                
                <!-- Code snippet -->
                <div class="w-100 h-100 mb-0">
                    <textarea name="code_snippet" id="code_snippet" cols="30" rows="10" class="form-control input-code-snippet"></textarea>
                </div>
                
                <!-- Post caption, info and comments -->
                <div class="p-2">
                    <small>
                        
                        <!-- Caption -->
                        <div class="mb-2">
                                <label for="caption" class="form-label">Caption</label>
                                <input type="text" class="form-control" id="caption" name="caption">
                        </div>
                        
                    </small>
                </div>
            </div>
        
            <div class="card-footer">
                <small>
                    <label for="programming_language" class="mb-1">Programming language</label>
                    <select name="programming_language" id="programming_language" class="form-select">
                        <option value="c">C</option>
                        <option value="javascipt">Javascript</option>
                        <option value="php">PHP</option>
                    </select>
                </small>
            </div>
            
        </div>

        <div class="d-flex justify-content-end">
            <input type="submit" class="btn btn-secondary" value="Post">
        </div>

    </form>

{ endblock }